    macros {
        /* Bluetooth/USB switching macros from mwave_prim.dtsi */
        usb_conn: usb_conn {
            compatible = "zmk,behavior-macro";
            label = "USB_CONN";
            wait-ms = <1>;
            tap-ms = <1>;
            #binding-cells = <0>;
            bindings = <&out OUT_USB &adv_mode ADV_OFF>;
        };
        
        ble_zero: ble_zero {
            compatible = "zmk,behavior-macro";
            label = "BLE_ZERO";
            wait-ms = <1>;
            tap-ms = <1>;
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 0 &adv_mode ADV_ON>;
        };
        
        ble_one: ble_one {
            compatible = "zmk,behavior-macro";
            label = "BLE_ONE";
            wait-ms = <1>;
            tap-ms = <1>;
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 1 &adv_mode ADV_ON>;
        };

        /* Version macro */
        macro_ver: macro_ver {
            compatible = "zmk,behavior-macro";
            label = "VERSION_MACRO";
            #binding-cells = <0>;
            bindings = <&kp V &kp E &kp R &kp S &kp I &kp O &kp N>;
        };

